    (add_builtin_function2 mod (to_sym "ge") bintT bintT bint_ge 0)
    (add_builtin_function2 mod (to_sym "equal") bintT bintT bint_eq 0)

    ; bint . int
    (add_builtin_function2 mod (to_sym "mul") bintT intT bint_mul 0)
    (add_builtin_function2 mod (to_sym "div") bintT intT bint_div 0)
    (add_builtin_function2 mod (to_sym "mod") bintT intT bint_mod 0)
    (add_builtin_function2 mod (to_sym "add") bintT intT bint_add 0)
    (add_builtin_function2 mod (to_sym "sub") bintT intT bint_sub 0)
    (add_builtin_function2 mod (to_sym "lt") bintT intT bint_lt 0)
    (add_builtin_function2 mod (to_sym "gt") bintT intT bint_gt 0)
    (add_builtin_function2 mod (to_sym "le") bintT intT bint_le 0)
    (add_builtin_function2 mod (to_sym "ge") bintT intT bint_ge 0)
    (add_builtin_function2 mod (to_sym "equal") bintT intT bint_eq 0)
    (add_builtin_function2 mod (to_sym "pow") bintT intT bint_pow 0)

    ; int . bint
    (add_builtin_function2 mod (to_sym "mul") intT bintT bint_mul 0)
    (add_builtin_function2 mod (to_sym "div") intT bintT bint_div 0)
    (add_builtin_function2 mod (to_sym "mod") intT bintT bint_mod 0)
    (add_builtin_function2 mod (to_sym "add") intT bintT bint_add 0)
    (add_builtin_function2 mod (to_sym "sub") intT bintT bint_sub 0)
    (add_builtin_function2 mod (to_sym "lt") intT bintT bint_lt 0)
    (add_builtin_function2 mod (to_sym "gt") intT bintT bint_gt 0)
    (add_builtin_function2 mod (to_sym "le") intT bintT bint_le 0)
    (add_builtin_function2 mod (to_sym "ge") intT bintT bint_ge 0)
    (add_builtin_function2 mod (to_sym "equal") intT bintT bint_eq 0)

    ; overwrite operations between int and int
    (add_builtin_function2 mod (to_sym "mul") intT intT int_mul 0)
    (add_builtin_function2 mod (to_sym "add") intT intT int_add 0)
    (add_builtin_function2 mod (to_sym "sub") intT intT int_sub 0)
    (add_builtin_function2 mod (to_sym "pow") intT intT bint_pow 0)
    ))


