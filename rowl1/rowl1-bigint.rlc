    (add_builtin_function1 mod (to_sym "uplus") bintT bint_uplus 0)
    (add_builtin_function1 mod (to_sym "uminus") bintT bint_uminus 0)
    (add_builtin_function1 mod (to_sym "to_s") bintT bint_to_s 0)
    (add_builtin_function1 mod (to_sym "hash") bintT bint_hash 0)
    (add_builtin_function1 mod (to_sym "to_i") stringT bint_to_i 0)

    ; bint . bint
    (add_builtin_function2 mod (to_sym "mul") bintT bintT bint_mul 0)
    (add_builtin_function2 mod (to_sym "div") bintT bintT bint_div 0)
