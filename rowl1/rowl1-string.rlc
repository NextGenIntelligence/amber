(import "rlvm-compile")
(import "rowl1-types")

(compile `object `(

(import "rowl1-util")
(import "rowl1-node")
(import "rowl1-module")
(import "rowl1-compile")

(fun s_equal (a b) (
    (if (streq a b)
        (return true)
        (return false)
        )
    ))

(fun s_to_s (s) (
    (return s)
    ))

(fun s_add (a b) (
    (return (strcat a b))
    ))

(fun s_add2 (a b) (
    (var to_s (to_sym "to_s"))
    (= a (call1 to_s a))
    (= b (call1 to_s b))
    (return (strcat a b))
    ))

(fun s_unescape (s) (
    (= s (strdup s))
    (unescape_string_d s)
    (return s)
    ))

;; StringIO
(fun new_sio () (
    (return (variant @StringIOE 1 (make_sio)))
    ))

(fun sio_to_s (io) (
    (return (string (sio_get (field_get io 1))))
    ))

(fun sio_print_str (io str) (
    (output_string (field_get io 1) str)
    (return nil)
    ))

(fun sio_print_int (io n) (
    (output_int (field_get io 1) (unbox n))
    (return nil)
    ))

(export fun setup_string (std) (
    (var string (find_module no_loc std (to_sym "string") @TRUE))
    (var sioT (domainP StringIO))

    (add_builtin_function2 string (to_sym "equal") stringT stringT s_equal 0)
    (add_builtin_function1 string (to_sym "to_s") stringT s_to_s 0)
    (add_builtin_function2 string (to_sym "add") stringT stringT s_add 0)
    (add_builtin_function2 string (to_sym "add") stringT DontCare s_add2 0)
    (add_builtin_function2 string (to_sym "add") DontCare stringT s_add2 0)

    (add_builtin_function1 string (to_sym "unescape") stringT s_unescape 0)

    (add_builtin_function1 string (to_sym "new") (quote StringIO) new_sio 0)
    (add_builtin_function1 string (to_sym "to_s") sioT sio_to_s 0)
    (add_builtin_function2 string (to_sym "print") sioT stringT sio_print_str 0)
    (add_builtin_function2 string (to_sym "print") sioT intT sio_print_int 0)
    ))

    ))
