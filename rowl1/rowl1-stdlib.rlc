(import "rlvm-compile")
(import "rowl1-types")

(compile `object `(

(import "rowl1-lex")
(import "rowl1-node")
(import "rowl1-interp")
(import "rowl1-assemble")

(fun builtin_print_int (n) (
    (check_type "print_int" @Int n)
    (print_int (get n))
    ))

(fun builtin_print_string (n) (
    (check_type "print_string" @String n)
    (print_string n)
    ))

(export fun init_stdlib () (

    ; register operators
    (add_postfix ";" 1)
    (add_constr  "def" 2 2)
    (add_constr  "return" 1 3)
    (add_constr  "if" 2 4)
    (add_infixr  ":" 5)
    (add_infixr  "=" 6)
    (add_infixl  "<" 7)
    (add_infixl  ">" 7)
    (add_infixl  "<=" 7)
    (add_infixl  ">=" 7)
    (add_infixl  "==" 7)
    (add_infixl  "!=" 7)
    (add_infixl  "+" 8)
    (add_infixl  "-" 8)
    (add_infixl  "*" 9)
    (add_infixl  "/" 9)
    (add_prefix  "+" 10)
    (add_prefix  "-" 10)

    (add_simple_function (to_symbol "print_string") 1 builtin_print_string)
    (add_simple_function (to_symbol "print_int") 1 builtin_print_int)
    ))

    ))
