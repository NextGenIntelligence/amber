DefineSyntax{
    comment,
    List{Tuple{List{"#", Many{List{Not{"\n"}, any}}}, Quote{nil}}},
    space_sensitive
}

DefineSyntax{
    blank,
    List{Tuple{List{comment}, Quote{nil}}}
}

