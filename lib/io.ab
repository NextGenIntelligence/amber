module Std::IO {
    ### Basic IO functions
    print(obj): print(stdout, obj)

    read_char()   : read_char(stdin)
    read_string() : read_string(stdin)
    read_line()   : read_line(stdin)

    puts(io, obj):
        print(io, obj)
        print(io, "\n")

    puts(obj): puts(stdout, obj)
}
