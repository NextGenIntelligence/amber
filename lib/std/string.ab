module Std {
    each(str@String): {
        i: 0
        n: str.size
        () -> {
            if (i >= n) return undef
            v: str[i]
            i += 1
            v
        }
    }

    reverse_each(str@String): {
        i: str.size
        () -> {
            if (i == 0) return undef
            i -= 1
            str[i]
        }
    }
}
