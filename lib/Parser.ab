#= Parser =

new(input) when input.InputFileStream? : Prim.parser_new(input)
new(path @ String): Prim.parser_new(IO.File.open_in(path))

trait Parser {
    .tree: alias(() -> Prim.parser_tree(self))
    .loc:  alias(() -> Prim.parser_loc(self))
    .reset!():Prim.parser_reset(self)
    .error_string: alias(() -> Prim.parser_error(self))
}

Prim.set_builtin_parent('Parser, Trait.Parser)
